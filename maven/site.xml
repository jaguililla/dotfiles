<project name="site">
    <publishDate position="bottom" /> <!-- format="yyyy-MM-dd" -->
    <version position="bottom" />

    <poweredBy>
        <logo name="Maven" img="http://maven.apache.org/images/logos/maven-inside.png" />
    </poweredBy>

    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.3.1</version>
    </skin>

    <custom>
        <fluidoSkin>
            <topBarEnabled>true</topBarEnabled>
            <topBarIcon>
                <name>POP APP</name>
                <alt>POP APP</alt>
                <href>/index.html</href>
                <src>/images/popapp-48.png</src>
            </topBarIcon>

            <googleSearch />
            <sideBarEnabled>true</sideBarEnabled>
            <sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>
        </fluidoSkin>
    </custom>

    <body>
        <head>
            <link rel="shortcut icon" href="/favicon.ico" />
        </head>

        <links>
            <item name="Model" href="model.html" />
            <item name="Templates" href="templates.html" />
            <item name="GUI" href="gui.html" />
            <item name="Storage" href="storage.html" />
        </links>

        <!-- The index.html is the site's main page. It's generated by 'index.confluence' -->
        <menu name="Documentation">
            <item name="Home" href="index.html" />
        </menu>

        <!--
         | Menus are defined manually in order to change their titles, to display them
         | unfolded and to change the order. To use the Maven default, replace the following
         | two menus for this one: <menu ref="reports" />
        -->
        <menu name="Project Information">
            <item name="Project Summary" href="project-summary.html" />

            <item name="Source Repository" href="source-repository.html" />
            <item name="Continuous Integration" href="integration.html" />
            <item name="Issue Tracking" href="issue-tracking.html" />

            <item name="Dependencies" href="dependencies.html" />
            <item name="Dependency Management" href="dependency-management.html" />
            <item name="Plugin Management" href="plugin-management.html" />

            <item name="Project Plugins" href="plugins.html" />
            <item name="Project License" href="license.html" />
            <item name="Project Team" href="team-list.html" />
        </menu>

        <menu name="Project Reports">
            <item name="API" href="apidocs/index.html" />
            <item name="Source" href="xref/index.html" />

            <item name="CPD Report" href="cpd.html" />

            <item name="Coverage Report" href="jacoco/index.html" />
            <item name="Test Report" href="surefire-report.html" />
            <item name="Test API" href="testapidocs/index.html" />
            <item name="Test Source" href="xref-test/index.html" />
        </menu>
    </body>
</project>
