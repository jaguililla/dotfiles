Z_HOME="$HOME/.local/share/z.sh"
mkdir -p ~/.local/share
[ ! -f $Z_HOME ] && curl -o $Z_HOME https://raw.githubusercontent.com/rupa/z/v1.11/z.sh
source "$Z_HOME"

