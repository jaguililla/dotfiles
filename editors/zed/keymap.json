// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "!CommitEditor && !GitCommit",
    "bindings": {
      "ctrl-enter": "command_palette::Toggle",
    },
  },
  {
    "bindings": {
      "ctrl-o": "outline::Toggle",
      "alt-h": "workspace::ActivatePreviousPane",
      "alt-l": "workspace::ActivateNextPane",
      "alt-m": "workspace::ToggleZoom",
      "alt-j": "pane::ActivatePreviousItem",
      "alt-k": "pane::ActivateNextItem",
      "alt-9": "project_panel::ToggleFocus",
      "alt-8": "git_panel::ToggleFocus",
      "alt-7": "outline_panel::ToggleFocus",
      "alt-0": "terminal_panel::ToggleFocus",
      "ctrl-7": "editor::ToggleComments",
      "ctrl-.": "editor::GoToDiagnostic",
      "ctrl-,": "editor::GoToPreviousDiagnostic",
      "shift shift": "file_finder::Toggle",
    },
  },
]
